<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_16">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.ayvytr.easyandroid.MainActivity">

        <TextView
            style="@style/MatchParent_WrapContent"
            android:text="aaaa"/>

        <RadioGroup
            style="@style/RadioGroup_Vertical">

            <RadioButton
                style="@style/RadioButton_CustomButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"/>

            <RadioButton
                style="@style/RadioButton_CustomButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"/>

        </RadioGroup>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaa"/>

        <com.ayvytr.easyandroid.view.CenterTextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="aaa"/>

        <com.ayvytr.easyandroid.view.LeftCenterTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:text="aaa"/>

        <com.ayvytr.easyandroid.view.RightCenterTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:text="bbb"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">

            <Button
                android:text="获取剪贴板"
                android:onClick="onGetClipboard"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <Button
                android:onClick="onSetClipboard"
                android:text="设置剪贴板"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <Button
            android:text="获取APP名称"
            android:onClick="onGetAppName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
